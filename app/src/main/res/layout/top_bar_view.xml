<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/top_bar_view_background"
        tools:ignore="ContentDescription" />

    <com.alex_aladdin.mercatorpuzzle.custom_views.FlagView
        android:id="@+id/flagView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/top_bar_view_inner_margin" />

    <com.alex_aladdin.mercatorpuzzle.custom_views.NameView
        android:id="@+id/nameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/flagView"
        android:layout_toEndOf="@id/flagView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/top_bar_view_inner_margin"
        android:layout_marginStart="@dimen/top_bar_view_inner_margin"
        android:layout_marginRight="@dimen/top_bar_view_inner_margin"
        android:layout_marginEnd="@dimen/top_bar_view_inner_margin"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAllCaps="true"/>

</merge>